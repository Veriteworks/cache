<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="formkey"/>
    <body>
        <referenceContainer name="content">
            <block class="MageSuite\Cache\Block\Adminhtml\Cache\ClearForm"
                   name="cache.clear"
                   template="MageSuite_Cache::cache/clear.phtml"
                   after="cache.additional"
            >
                <block class="\MageSuite\Cache\Block\Adminhtml\Cache\Form" name="cache.clear.form" />
            </block>
        </referenceContainer>
    </body>
</page>
